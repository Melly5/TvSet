<Window x:Class="TvSet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TvSet"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Back/Back.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2.1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="27"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="16*" />
            </Grid.RowDefinitions>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3.544"/>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="183*"/>
                <ColumnDefinition Width="183*"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="116*"/>
                <RowDefinition Height="124*"/>
                <RowDefinition Height="91*" />
            </Grid.RowDefinitions>
            <Canvas Name="World"  Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="220" Grid.RowSpan="2" Grid.Row="1" VerticalAlignment="Center" Width="346"/>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="154*"/>

                <RowDefinition Height="10"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="68*" />
            </Grid.RowDefinitions>
            <Button Grid.Column="1" HorizontalAlignment="Center" Height="27" Margin="0,3,0,0" Grid.Row="5" VerticalAlignment="Top" Width="49">
                <Button.Background>
                    <ImageBrush  ImageSource="/Images/Buttons/CloseB.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="10,118,0,0" Grid.Row="3" VerticalAlignment="Top" Width="50">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Buttons/AddB.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="70,118,0,0" Grid.Row="3" VerticalAlignment="Top" Width="50">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Buttons/EditB.png"/>
                </Button.Background>
            </Button>
            <Slider Name="Temperature" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="82" Height="15" Margin="24,6,0,0"/>
            <Slider Name="Humidity" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="82" Height="15" Margin="24,-3,0,0"/>
            <Rectangle Grid.Column="2" HorizontalAlignment="Left" Height="152" Margin="64,12,0,0" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="116" Fill="Black" Grid.RowSpan="2"/>
            <TabControl  Grid.Column="1" Grid.Row="2" BorderBrush="{x:Null}" Margin="5,27,10,0" Grid.RowSpan="2" Background="#FF8A6D54">
                <TabItem Header="+" Width="40">
                    <TabItem.Background>
                        <ImageBrush  ImageSource="/Images/Buttons/AddB.png"/>
                    </TabItem.Background>
                    <Grid x:Name="Tree" Background="#FFC3A58A" HorizontalAlignment="Right" Width="113">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Добавить" FontSize="9"  HorizontalAlignment="Center"  VerticalAlignment="Top" Grid.Column="1" Height="20"/>
                        <Button x:Name="Tree1" Content="Tree"  Height="22" Click ="Click_t" BorderBrush="{x:Null}" Foreground="{x:Null}" VerticalAlignment="Top" Margin="8,20,7,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/Back/B_add.png"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="Animal" Content="Tree"  Height="22" Click ="Click_a" BorderBrush="{x:Null}" Foreground="{x:Null}" VerticalAlignment="Top" Margin="8,47,7,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/Back/B_add.png"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="Bird" Content="Tree"  Height="22" Click ="Click_b" BorderBrush="{x:Null}" Foreground="{x:Null}" VerticalAlignment="Top" Margin="8,74,7,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/Back/B_add.png"/>
                            </Button.Background>
                        </Button>

                    </Grid>
                </TabItem>
                <TabItem Header="Edit" Width="40" BorderBrush="#FFB79A80" >
                    <TabItem.Background>
                        <ImageBrush ImageSource="/Images/Buttons/EditB.png"/>
                    </TabItem.Background>
                    <Grid Background="#FFC4A78C" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="97*"/>
                            <RowDefinition Height="29*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Name="EditInfo" FontSize="9" Margin="2,10,127,17" Width="125" Height="70">
                            <Label.Content>
                                <TextBlock TextWrapping="Wrap" Height="60" Width="99" >Нажмите на объект двaжды и перемещайте с помощью клавиш клавиатуры.</TextBlock>
                            </Label.Content>
                        </Label>
                        <Button Content="Удалить"  HorizontalAlignment="Left" Height="29" Margin="30,89,0,0" VerticalAlignment="Top" Width="53" Grid.RowSpan="2">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/Buttons/AddB.png"/>
                            </Button.Background>
                        </Button>

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
